<!DOCTYPE html>
<html>
  <head>
    <title>Stinkylinks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'app' %>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,600,700" rel="stylesheet">
  </head>

  <body>
    <% if notice.present? %>
      <div class="alert alert--info"><%= notice %></div>
    <% end %>
    <% if alert.present? %>
      <div class="alert alert--warning"><%= alert %></div>
    <% end %>

    <div class="wrapper">

      <div class="nav">

        <div class="nav-logo">
          <%= link_to "Stinkylinks", root_url %>
        </div>
        
        <div class="nav-actions">
          <% if user_signed_in? %>

          <%= link_to(edit_user_registration_path, class: "button") do %>
            <% if Current.user.avatar.attached? %>
              <%= image_tag current_user.avatar.variant(resize: "20x20"), class: "user-avatar" %>
            <% else %>
              <%= image_tag current_user.avatar_url, width: 20 %>
            <% end %>
            <%= Current.user.nick_name %>
          <% end %>

            <%= link_to "Logout", destroy_user_session_path, class: "button", method: :delete %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path %>
            <%= link_to "Login", new_user_session_path %>
          <% end %>
        </div>
      </div>

      <div class="main">
        <%= yield %>
      </div>

    </div>
  </body>
</html>
